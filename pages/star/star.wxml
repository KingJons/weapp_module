<view class="accessWrapper">
  <view class="title">
    评价
    <view class="starsWrapper">
      <block wx:for="{{stars}}" wx:key="{{key}}">
        <image class="star-image"
         style="left:{{item*50}}rpx"
         src="{{key>item?(key-item==0.5?halfSrc:selectedSrc):normalSrc}}">
          <view class="item" style="left:0rpx" data-key="{{item+0.5}}"
          bindtap="selectLeft"></view>
          <view class="item" style="left:25rpx" data-key="{{item+1}}"
          bindtap="selectRight"></view>
        </image>
      </block>
    </view>
  </view>
  <textarea bindinput="textAreaCon"
   placeholder="写点什么吧..." auto-focus="true">
  </textarea>
  <view class="uploadFile" bindtap='upload'>+</view>
</view>
<button class="save-edit" bindtap="saveData" type="submit">提交保存</button>